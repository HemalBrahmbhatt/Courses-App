<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.TestResultFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frm_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/view_margin"
                        android:text="@string/your_score"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/circular_indicator"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/view_margin_small"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circular_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_score"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/view_margin"
                        app:indicatorColor="@color/white"
                        app:indicatorSize="@dimen/logo_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/circular_indicator"
                        android:layout_alignBottom="@id/circular_indicator"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_ind" />
                </RelativeLayout>
            </FrameLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sub_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frm_lay"
                android:layout_margin="@dimen/view_margin"
                android:text="@string/subject"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_subject_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frm_lay"
                android:layout_marginTop="@dimen/view_margin"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_toEndOf="@id/sub_txt"
                android:text="@string/subject"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/txt_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_txt"
                android:layout_marginStart="@dimen/view_margin"
                android:text="@string/date_time"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_date_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_subject_result"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_toEndOf="@id/date_txt"
                android:text="@string/subject"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/txt_size" />
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_line"
                android:layout_below="@id/txt_date_result"
                android:layout_marginTop="@dimen/view_margin_small"
                android:background="@android:color/darker_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line"
                android:layout_marginBottom="@dimen/view_margin"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/result_item"
                android:nestedScrollingEnabled="false"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>